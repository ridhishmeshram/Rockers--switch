#include <stdio.h>

int main() {
    int a;
    printf("please enter input (0 or 1)");
    scanf("%d",&a);
    if(a==1){
        printf("mode : wi-fi\nLED:GREEN\ncontrolled Remotly");
        
    }else if(a==0){
        printf("Mode:Disconnected\nLED:RED");
        
    }else{
        printf("please give correct input");
    }
    
    return 0;
}
